alias dc='docker compose'
alias nes='docker compose up -d'
alias app='docker compose exec app'
alias hot='docker compose exec hot'
alias worker='docker compose exec worker'
alias dusk='docker compose exec app php artisan dusk --testdox'
alias phpunit='docker compose exec app ./vendor/bin/phpunit --testdox'
alias run-tests='hot npm run test:unit && app php artisan dusk && app ./vendor/bin/phpunit'
alias rebuild='docker compose down && docker compose build && docker compose up -d'
alias reseed='app php artisan migrate:fresh && app php artisan db:seed'
alias restart='docker compose down && docker compose up -d'
alias restart-fresh='docker compose down --volumes && docker compose up -d && reseed'
alias logs='docker compose logs -f'
